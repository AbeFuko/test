<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<constant name="struts.devMode" value="true"/>
	<package name="com.internousdev.template2.action2" extends="struts-default">

		<action name="HomeAction" class="com.internousdev.template.action2.HomeAction" method="execute">
			<result name="success">login.jsp</result>
		</action>

		<action name="LoginAction" class="com.internousdev.template.action2.LoginAction" method="execute">
			<result name="success">buyItem.jsp</result>
			<result name="error">home.jsp</result>
		</action>

		<action name="UserCreateAction" class="com.internousdev.template.action2.UserCreateAction" method="execute">
			<result name="success">userCreate.jsp</result>
		</action>

		<action name="UserCreateConfirmAction" class="com.internousdev.template.action2.UserCreateConfirmAction" method="execute">
			<result name="success">userCreateConfirm.jsp</result>
			<result name="error">userCreate.jsp</result>
		</action>

		<action name="UserCreateCompleteAction" class="com.internousdev.template.action2.UserCreateCompleteAction" method="execute">
			<result name="success">userCreateComplete.jsp</result>
		</action>



	</package>
</struts>